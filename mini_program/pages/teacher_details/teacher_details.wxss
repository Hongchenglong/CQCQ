  background-color: rgba(126, 166, 248, 0.33);
}

.tone {
  text-align: center;
  margin-left: 5%;
  margin-top: 3%;
  width: 40%;
  height: 40rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 30rpx;
  font-family: SourceHanSansSC-regular;
  float: left;
}

.ttwo {
  text-align: center;
  margin-top: 3%;
  width: 50%;
  height: 40rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 30rpx;
  font-family: SourceHanSansSC-regular;
  float: left;
}

.imgs {
  width: 720rpx;
  height: 450rpx;
  margin-left: 2%;
